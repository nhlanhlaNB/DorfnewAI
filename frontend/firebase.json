{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/__/auth/action{,/**}",
        "destination": "/__/auth/action/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}